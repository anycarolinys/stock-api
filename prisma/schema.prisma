// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id       String @id @default(uuid())
  name     String
  email    String
  topico   String
  password String

  created_at DateTime? @default(now())
  updated_at DateTime? @default(now())

  sales Sale[] // Relacionamento com vendas

  @@map("users")
}

model Category {
  id         String    @id @default(uuid())
  name       String
  created_at DateTime? @default(now())
  updated_at DateTime? @default(now())

  products Product[]

  @@map("categories")
}

model Product {
  id          String    @id @default(uuid())
  name        String
  price       String
  description String
  amount      Int
  created_at  DateTime? @default(now())
  updated_at  DateTime? @default(now())

  category    Category @relation(fields: [category_id], references: [id])
  category_id String
  items       Item[]
  sales       Sale[] // Relacionamento com vendas

  @@map("products")
}

model Item {
  id         String    @id @default(uuid())
  amount     Int
  created_at DateTime? @default(now())
  updated_at DateTime? @default(now())

  product    Product @relation(fields: [product_id], references: [id])
  product_id String

  @@map("items")
}

model Sale {
  id          String    @id @default(uuid())
  name        String    // Nome do cliente
  cpf         String    // CPF do cliente
  email       String    // Email do cliente
  quantity    Int       // Quantidade do produto vendido
  total_price String    // Preço total calculado da venda
  created_at  DateTime? @default(now())
  updated_at  DateTime? @default(now())

  product     Product   @relation(fields: [product_id], references: [id])
  product_id  String    // Produto que está sendo vendido

  user        User      @relation(fields: [user_id], references: [id])
  user_id     String    // Usuário que está fazendo a venda

  @@map("sales")
}
